<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">

    <title>{% block title %}Welcome!{% endblock %}</title>

    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}

    {% block stylesheets %}
    {{ encore_entry_link_tags('admin') }}
    {% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('admin') }}">Administration</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('admin') }}">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">Actions</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="{{ path('admin_celebrite_index') }}">Liste Célébrités</a>
                            </li>
                            <li><a class="dropdown-item" href="{{ path('admin_user_index') }}">Liste Utilisateurs</a>
                            </li>
                            <li><a class="dropdown-item" href="{{ path('admin_activite_index') }}">Liste Activités</a>
                            </li>
                            <li><a class="dropdown-item" href="{{ path('admin_medias_index') }}">Liste Médias</a></li>
                        </ul>
                    </li>
                </ul>
                <button class="btn btn-dark" href="{{ path('app_logout') }}">Déconnexion</button>
            </div>
        </div>
    </nav>
    <main class="container-fluid">
        
        {% block body %}
        {% endblock %}
    </main>


    {% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
    {% endblock %}

</body>

</html>